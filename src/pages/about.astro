    <div style="text-align: center; margin: 1.5rem auto; max-width: 330px;">
        <div id="music-player">
            <!-- 播放器将通过JavaScript动态插入 -->
        </div>
    </div>

    <script>
        // 等待DOM加载完成后执行
        document.addEventListener('DOMContentLoaded', () => {
            // 音乐列表，每个对象包含type和id参数
            const musicList = [
                { type: 3, id: 3061173126 } , // 您提供的第一首音乐
                { type: 3, id: 3063151261 } ,
                { type: 3, id: 3070746499 } ,
                { type: 3, id: 3076107041 } ,
                { type: 3, id: 3076877353 } ,
                { type: 3, id: 3077860537 } ,
                { type: 3, id: 3076528968 } 
				// 可以在这里添加更多音乐
                // { type: 3, id: anotherMusicId }
            ];
            
            // 随机选择一首音乐
            const randomMusic = musicList[Math.floor(Math.random() * musicList.length)];
            
            // 创建iframe播放器
            const iframe = document.createElement('iframe');
            iframe.frameBorder = '0';
            // 移除不支持的border属性
            iframe.marginWidth = '0';
            iframe.marginHeight = '0';
            iframe.width = '330';
            iframe.height = '86';
            // 添加自动播放参数，并增加一个时间戳避免缓存问题
            iframe.src = `//music.163.com/outchain/player?type=${randomMusic.type}&id=${randomMusic.id}&auto=1&height=66&_t=${Date.now()}`;
            
            // 添加到播放器容器
            const playerContainer = document.getElementById('music-player');
            if (playerContainer) {
                playerContainer.appendChild(iframe);
                
                // 当iframe加载完成后，尝试触发点击事件以帮助在某些浏览器中自动播放
                iframe.onload = () => {
                    // 对于某些浏览器，可能需要用户交互后才能自动播放
                    // 添加这段代码作为额外的兼容处理
                    try {
                        // 添加null检查以修复TypeScript错误
                        if (iframe.contentWindow) {
                            iframe.contentWindow.postMessage('play', '*');
                        }
                    } catch (e) {
                        console.log('无法触发自动播放:', e);
                    }
                };
            }
        });
    </script>

