---
const { title } = Astro.props;
---
<div style="
  background-color: #fdf6ed; /* 浅橙色背景，可根据需求调整 */
  border-left: 3px solid #f59e0b; /* 橙色边框 */
  padding: 10px; 
  border-radius: 0; /* 无边角 */
">
  <!-- 标题区：对勾图标 + 标题 水平排列 -->
  <div style="display: flex; align-items: center; margin-bottom: 8px;">
    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="#f59e0b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
      <polyline points="22 4 12 14.01 9 11.01" />
    </svg>
    <strong style="color: #f59e0b; margin-left: 6px; font-size: 30px;">{title}</strong>
  </div>
  <!-- 内容区：独占一行 -->
  <p style="margin: 0;">
    <slot />
  </p>
</div>