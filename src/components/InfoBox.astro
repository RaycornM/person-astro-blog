---
// 组件参数定义
const { title } = Astro.props;
---

<div style="
  background-color: #e6e9f2; 
  border-left: 3px solid #4f9bff; 
  padding: 10px; 
  border-radius: 0; /* 无边角 */
">
  <!-- 标题区：图标 + 标题 水平排列 -->
  <div style="display: flex; align-items: center; margin-bottom: 8px;">
    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="#4f9bff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="12" cy="12" r="10" />
      <path d="M12 16v-4" />
      <path d="M12 8h.01" />
    </svg>
    <strong style="color: #4f9bff; margin-left: 6px; font-size: 30px;">{title}</strong>
  </div>
  <!-- 内容区：独占一行 -->
  <p style="margin: 0;">
    <slot />
  </p>
</div>